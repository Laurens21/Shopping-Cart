{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<div class="example-wrapper">
        <h1>Winkelwagen</h1>
            <table class="table">
                <tr>
                    <td>Naam</td>
                    <td>Categorie</td>
                    <td>Aantal</td>
                    <td>Prijs</td>
                    <td>Totaal Prijs</td>
                </tr>
                {% for product in Products %}
                <tr>
                    <td>
                        {{ product.Product.Naam }}
                    </td>
                    <td>
                        {{ product.Product.categorieid }}
                    </td>
                    <td>
                        {{ product.Aantal }}
                    </td>
                    <td>
                        {{ product.Product.Prijs }}
                    </td>
                    <td>
                        {{ product.Product.Prijs * product.Aantal}}
                    </td>
                </tr>
                {% endfor %}
            </table>
</div>
{% endblock %}