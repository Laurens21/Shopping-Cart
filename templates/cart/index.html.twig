{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<div class="example-wrapper">
        <h1>Winkelwagen</h1>
            <table class="table" style="text-align: center;">
                <tr>
                    <th>Naam</th>
                    <th>Categorie</th>
                    <th>Omschrijving</th>
                    <th>Aantal</th>
                    <th>Prijs</th>
                    <th></th>
                </tr>
                {% set totalPrice = 0 %}
                {% for product in Products %}
                <tr>
                    <td>
                        {{ product.Product.Naam }}
                    </td>
                    <td>
                        {{ product.Product.categorieid }}
                    </td>
                    <td>
                        {{ product.Product.omschrijving }}
                    </td>
                    <td>
                        {{ product.Aantal }}
                    </td>
                    <td>
                        {{ product.Product.Prijs }}
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('product_del', {'id': product.Product.id}) }}">Remove</a>
                    </td>
                </tr>
                    {% set totalPrice = totalPrice + (product.Aantal * product.Product.Prijs)|number_format(2, '.', ',') %}
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                {% if totalPrice != null %}
                    <tr>
                        <td colspan="3"></td>
                        <th colspan="1">Totaal prijs : </th>
                        <td colspan="1">{{ totalPrice }}</td>
                        <td colspan="1">
                            <a class="btn btn-secondary" href="{{ path('checkout') }}">Checkout</a>
                        </td>
                    </tr>
                {% endif %}
            </table>
</div>
{% endblock %}