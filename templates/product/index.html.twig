{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table style="text-align: center;" class="table">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Prijs</th>
                <th>Afbeelding</th>
                <th>Omschrijving</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.naam }}</td>
                <td>{{ product.prijs }}</td>
                <td>{{ product.afbeelding }}</td>
                <td>{{ product.omschrijving }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                    <a class="btn btn-success" value="{{app.session.set('Code', 2)}}" href="{{ path('product_add', {'id': product.id}) }}">add to cart</a>
                    <!-- {% for cartProduct in cart|keys %}
                        {% if cartProduct == product.id %}
                            <a class="btn btn-danger" href="{{ path('product_del', {'id': product.id}) }}">delete from cart</a>
                        {% endif %}
                    {% endfor %} -->
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"><a class="btn btn-success" href="{{ path('product_new') }}">Create new</a></td>
            </tr>
        {% endfor %}
        </tbody>
        {% if products != null %}
            <td colspan="4"></td>
            <td colspan="1">
                <a class="btn btn-success" href="{{ path('product_new') }}">Create new</a>
            </td>
        {% endif %}
    </table>
{% endblock %}
